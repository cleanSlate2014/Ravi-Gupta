<Window x:Class="scrollbar2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" Background="#eee">
    <Grid>
        <ScrollBar  Style="{StaticResource {x:Type ScrollBar}}" Margin="1350,0,0,0" ViewportSize="1"></ScrollBar>
        <ScrollBar  Style="{StaticResource {x:Type ScrollBar}}" ViewportSize="0.2" Margin="357,18,370,-666" RenderTransformOrigin="0.5,0.5" Width="Auto" Height="Auto">
            <ScrollBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.873"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ScrollBar.RenderTransform>
        </ScrollBar>
    </Grid>
</Window>