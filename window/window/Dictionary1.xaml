                    <GradientStop Color="#FF428BCA" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Style For Window Primary End Here-->
    <!--Primary Window-->


