<Window x:Class="messagebox.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1"    WindowStartupLocation="CenterScreen"  WindowState="Maximized" WindowStyle="None" AllowsTransparency="True"   MouseLeftButtonDown="Modal_main_MouseLeftButtonDown">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity="0.3"/>
    </Window.Background>
   
        <Border Background="White" x:Name="rect"  Margin="450,150,450,150" Opacity="1" CornerRadius="8">
    <Grid Background="White" Opacity="1">
       
                <TextBox Style="{StaticResource textboxPrimary}" Margin="-99,-134,-101,134" Tag="Name"/>
                <TextBox Style="{StaticResource textboxPrimary}" Margin="-99,-81,-101,81" Tag="Password"/>
                <TextBox Style="{StaticResource textboxPrimary}" Margin="-99,-24,-101,23" Tag="Confirm Password"/>
                <Button Style="{StaticResource buttonPrimary}" Content="Submit" Margin="-57,74,57,-74" Height="40" Width="100"></Button>
                <Button Style="{StaticResource buttonPrimary}" Content="Cancel" Margin="75,74,-75,-74" Height="40" Width="100"></Button>
        
        </Grid>
    </Border>
  
</Window>
